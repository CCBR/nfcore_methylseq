nextflow_pipeline {

    name "bwameth"
    script "main.nf"

    test("Single End") {
        when {
            params {
                aligner = "bwameth"
                save_reference = true
                outdir = "./results"
            }
        }

        then {
            assert workflow.success
            assert workflow.trace.tasks().size() == 43
            assert snapshot(workflow).match()
        }
    }

    test("Single End with index") {
        when {
            params {
                aligner = "bwameth"
                save_reference = true
                bismark_index = "results/bwameth/reference_genome/bwameth/"
                methyl_kit = true
                outdir = "$outputDir"
            }
        }

        then {
            // HACK This works because they run order
            assert workflow.success
            assert workflow.trace.tasks().size() == 43
            assert snapshot(workflow).match()
        }
    }

    test("Single End RRBS") {
        when {
            params {
                aligner = "bwameth"
                skip_trimming = true
                rrbs = true
                outdir = "$outputDir"
            }
        }

        then {
            assert workflow.success
            assert workflow.trace.tasks().size() == 34
            assert snapshot(workflow).match()
        }
    }

    test("Single End RRBS with index") {
        when {
            params {
                aligner = "bwameth"
                skip_trimming = true
                rrbs = true
                save_reference = true
                bismark_index = "results/bwameth/reference_genome/BismarkIndex/"
                methyl_kit = true
                outdir = "$outputDir"
            }
        }

        then {
            // HACK This works because they run order
            assert workflow.success
            assert workflow.trace.tasks().size() == 34
            assert snapshot(workflow).match()
        }
    }

}
