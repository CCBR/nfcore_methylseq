nextflow_pipeline {

    name "Test Pipeline with 1 process"
    script "main.nf"

    test("Should run without failures") {

        when {
            params {
                aligner = "bismark"
                save_reference = true
                outdir = "./results"
            }
        }

        then {
            assert workflow.success
            assert workflow.trace.tasks().size() == 35
        }

    }

}
