nextflow_pipeline {

    name "bismark"
    script "main.nf"

    test("Single End") {
        when {
            params {
                aligner = "bismark"
                save_reference = true
                outdir = "$outputDir"
            }
        }

        then {
            assert workflow.success
            assert workflow.trace.tasks().size() == 35
            // FIXME assert snapshot(workflow).match()
            assert new File("$outputDir/multiqc/bismark/multiqc_report.html").exists()

            assert new File("$outputDir/bismark/methylation_calls/splitting_report/SRR389222_sub1_T1_trimmed_bismark_bt2.deduplicated_splitting_report.txt").exists()
            assert new File("$outputDir/bismark/methylation_calls/splitting_report/SRR389222_sub2_T1_trimmed_bismark_bt2.deduplicated_splitting_report.txt").exists()
            assert new File("$outputDir/bismark/methylation_calls/splitting_report/SRR389222_sub3_T1_trimmed_bismark_bt2.deduplicated_splitting_report.txt").exists()
            assert path("$outputDir/bismark/methylation_calls/splitting_report/SRR389222_sub3_T1_trimmed_bismark_bt2.deduplicated_splitting_report.txt").md5 == "f53f4450ccb90bfa9587c0dc030cfd4f"
        }
    }

    test("Single End with index") {
        when {
            params {
                aligner = "bismark"
                save_reference = true
                bismark_index = "results/bismark/reference_genome/BismarkIndex/"
                cytosine_report = true
                outdir = "$outputDir"
            }
        }

        then {
            // HACK This works because they run order
            assert workflow.success
            assert workflow.trace.tasks().size() == 34
            // FIXME assert snapshot(workflow).match()
        }
    }

    test("Single End RRBS") {
        when {
            params {
                aligner = "bismark"
                skip_trimming = true
                rrbs = true
                outdir = "$outputDir"
            }
        }

        then {
            assert workflow.success
            assert workflow.trace.tasks().size() == 29
            // FIXME assert snapshot(workflow).match()
        }
    }

    test("Single End RRBS with index") {
        when {
            params {
                aligner = "bismark"
                skip_trimming = true
                rrbs = true
                save_reference = true
                bismark_index = "results/bismark/reference_genome/BismarkIndex/"
                cytosine_report = true
                outdir = "$outputDir"
            }
        }

        then {
            // HACK This works because they run order
            assert workflow.success
            assert workflow.trace.tasks().size() == 28
            // FIXME assert snapshot(workflow).match()
        }
    }

}
